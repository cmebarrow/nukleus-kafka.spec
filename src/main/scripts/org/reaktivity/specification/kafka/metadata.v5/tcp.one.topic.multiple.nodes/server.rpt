accept ${brokerUrl}

accepted
connected

read 21 # Size int32
read 0x03s # ApiKey int16 (Metadata)
read 0x05s # ApiVersion int16
read (int:metadataRequestId) # CorrelationId int32
read -1s # ClientId string (null)
read 1 # [TopicName] array length
  read 4s "test"
read [0x00] # allow_auto_topic_creation (boolean)

write 171 # Size int32
write ${metadataRequestId} # CorrelationId int32
write 0 # throttle_time_ms int32
write 2      # brokers array length
  write 1001    # broker id
  write 7s "broker1"
  write 9092 # port int32
  write -1s  # rack string (null)

  write 1002
  write 7s "broker2"
  write 9092
  write -1s
write 9s "cluster 1"
write 1001 # controller broker id
write 1 # topic array length
  write 0s # error code
  write 4s "test"
  write byte 0x00 # is_internal
  write 2 # partition array length
    write 0s     # error code
    write 1      # partition
    write 1001   # leader
    write 2      # replicas array 
    write 1001   # node having a replica
    write 1002   # node having a replica
    write 2      # isr array
    write 1001   # node having an in sync replica
    write 1002   # node having an in sync replica
    write 0      # offline replicas array (empty)

    write 0s     # error code
    write 0      # partition
    write 1002   # leader
    write 2      # replicas array 
    write 1002   # node having a replica
    write 1001   # node having a replica
    write 2      # isr array
    write 1002   # node having an in sync replica
    write 1001   # node having an in sync replica
    write 0      # offline replicas array (empty)
