property newNetworkRouteRef  ${nuklei:newReferenceId()} # external

property networkConnect "nukleus://kafka/streams/source"
property networkConnectWindow 8192

property newMetadataRequestId ${kafka:newRequestId()}
property newRequestId1 ${kafka:newRequestId()}
property newRequestId2 ${kafka:newRequestId()}
property newRequestId3 ${kafka:newRequestId()}
property newRequestId4 ${kafka:newRequestId()}
property newRequestId5 ${kafka:newRequestId()}
property maximumWaitTime 500
property maximumBytes 65535
property maximumBytesTest0 8192

# Metadata stream
connect await ROUTED_SERVER
        ${networkConnect}
  option nukleus:route ${newNetworkRouteRef}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

write 21        # Size int32
write 0x03s     # ApiKey int16 (Metadata)
write 0x05s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
  write 4s "test"
write [0x00]    # allow_auto_topic_creation (boolean)

read 85         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 4s "test"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)
read notify METADATA_RECEIVED

write 41        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 4s "test" # topic name
write 1         # config names count
write 14s "cleanup.policy"  # config name

read 54         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 4s "test"  # topic name
read 1          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

# Live Fetch stream
connect await METADATA_RECEIVED
        ${networkConnect}
  option nukleus:route ${newNetworkRouteRef}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

read notify LIVE_CONNECTED

write 0x41
write 0x01s
write 0x05s
write ${newRequestId1}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 1
write 0x04s "test"
write 1
write 0         # partition
write 1L        # offset
write -1L
write ${maximumBytesTest0}

read 140
read ${newRequestId1}
read [0..4]
read 0x01
read 0x04s "test"
read 0x01
read 0x00
read 0x00s
read 2L         # high_watermark
read -1L
read 0L
read -1
read 80
read 1L         # first offset
read 0x44
read 0x00
read [0x02]
read 0x4e8723aa
read 0x00s
read 0x00
read (long:timestamp1b)
read ${timestamp1b}
read -1L
read -1s
read -1
read 0x01
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(0)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hello, again"
read [0x00]

write 0x41
write 0x01s
write 0x05s
write ${newRequestId2}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 0x01
write 0x04s "test"
write 0x01
write 0x00
write 2L        # offset
write -1L
write ${maximumBytesTest0}

read 0x0c
read ${newRequestId2}
read 0
read 0x00

write 0x41
write 0x01s
write 0x05s
write ${newRequestId3}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 0x01
write 0x04s "test"
write 0x01
write 0         # partition
write 2L        # offset
write -1L
write ${maximumBytesTest0}

read 140        # Size
read ${newRequestId3}
read [0..4]
read 0x01
read 0x04s "test"
read 1
read 0          # partition
read 0x00s
read 3L         # high_watermark
read -1L
read 0L
read -1
read 80 
read 2L         # first offset
read 68 
read 0
read [0x02]
read 0x4e8723aa
read 0x00s
read 0       
read (long:timestamp2a)
read ${timestamp2a}
read -1L
read -1s
read -1
read 1          # number of records
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(0)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hi, everyone"
read [0x00]

write 0x41
write 0x01s
write 0x05s
write ${newRequestId4}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 0x01
write 0x04s "test"
write 0x01
write 0x00
write 0x03L
write -1L
write ${maximumBytesTest0}

# Historical Fetch stream
connect await LIVE_CONNECTED
        ${networkConnect}
  option nukleus:route ${newNetworkRouteRef}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

write 65        # Size
write 0x01s     # Fetch
write 0x05s
write ${newRequestId5}
write -1s
write -1
write ${maximumWaitTime}
write 0x01
write ${maximumBytes}
write [0x00]
write 1
write 0x04s "test"
write 1
write 0         # Partition
write 0L        # offset
write -1L
write ${maximumBytesTest0}

read 178
read ${newRequestId5}
read 0
read 1
read 0x04s "test"
read 1
read 0
read 0x00s
read 3L         # high_watermark
read -1L
read 0L
read -1
read 0x76
read 0x00L
read 0x6a
read 0x00
read [0x02]
read 0x4e8723aa
read 0x00s
read 0
read (long:newTimestamp5)
read ${newTimestamp5}
read -1L
read -1s
read -1
read 0x03
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(0)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hello, world"
read [0x00]
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(1)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hello, again"
read [0x00]
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(2)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hi, everyone"
read [0x00]




