property newNetworkRouteRef  ${nuklei:newReferenceId()} # external

property networkConnect "nukleus://kafka/streams/source"
property networkConnectWindow 8192

property newMetadataRequestId ${kafka:newRequestId()}
property newRequestId ${kafka:newRequestId()}
property maximumWaitTime 500
property maximumBytes 65535
property maximumBytesTest0 8192

# Metadata connection
connect await ROUTED_SERVER
        ${networkConnect}
  option nukleus:route ${newNetworkRouteRef}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

write 22        # Size int32
write 0x03s     # ApiKey int16 (Metadata)
write 0x05s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
write 5s "test1"
write [0x00]    # allow_auto_topic_creation (boolean)

read 86         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 5s "test1"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)

write 63        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 5s "test1" # topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 89         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 5s "test1"  # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read notify METADATA_RECEIVED


write 22        # Size int32
write 0x03s     # ApiKey int16 (Metadata)
write 0x05s     # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # [TopicName] array length
write 5s "test2"
write [0x00]    # allow_auto_topic_creation (boolean)

read 86         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # brokers array length
  read 1        # broker id
  read 7s "broker1"
  read 9093     # port int32
  read -1s      # rack string (null)
read 9s "cluster 1"
read 1          # controller broker id
read 1          # topic array length
  read 0s       # error code
  read 5s "test2"
  read [0x00]   # is_internal boolean
  read 1        # partition array length
    read 0s     # error code
    read 0      # partition
    read 1      # leader
    read 0      # replicas array (empty)
    read -1     # isr array (null)
    read 0      # offline replicas array (empty)

write 63        # Size int32
write 32s       # ApiKey int16 (DescribeConfigs)
write 0s        # ApiVersion int16
write ${newMetadataRequestId} # CorrelationId int32
write -1s       # ClientId string (null)
write 1         # resources count
write [0x02]    # resource type (topic is 2, from org/apache/kafka/common/resource/ResourceType.java)
write 5s "test2" # topic name
write 2         # config names count
write 14s "cleanup.policy"  # config name
write 19s "delete.retention.ms"  # config name

read 89         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read [0..4]     # throttle_time_ms int32
read 1          # resources count
read 0s         # error code
read -1s        # error message
read [0x02]     # resource type (topic)
read 5s "test2"  # topic name
read 2          # config entries count
read 14s "cleanup.policy"   # config name
read 6s "delete"            # config value
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean
read 19s "delete.retention.ms"
read 8s "86400000"
read [0x00]     # read_only boolean
read [0x01]     # is_default boolean
read [0x00]     # is_sensitive boolean

# Fetch stream
connect await METADATA_RECEIVED
        ${networkConnect}
  option nukleus:route ${newNetworkRouteRef}
  option nukleus:window ${networkConnectWindow} 
  option nukleus:transmission "duplex"
  option nukleus:byteorder "network"

write nukleus:begin.ext ${tcp:beginExtRemoteHost("broker1", 9093)}

connected

# first fetch request returns no records
write 66
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 1
write 5s "test1"
write 1
write 0
write 0L
write -1L
write ${maximumBytesTest0}

read 61
read ${newRequestId}
read [0..4]
read 1
read 5s "test1"
read 1          # partition count
read 0          # partition
read 0s         # errCode
read 0L         # high watermark
read -1L        # last stable offset
read 0L         # log start offset
read -1         # aborted transaction count
read 0          # record set size

# fetch request fails with errcode 1
write 101
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 2
write 5s "test1"
write 1
write 0
write 0L
write -1L
write ${maximumBytesTest0}
write 5s "test2"
write 1
write 0
write 0L
write -1L
write ${maximumBytesTest0}

read 110
read ${newRequestId}
read [0..4]
read 2
read 5s "test1"
read 1          # partition count
read 0          # partition
read 1s         # errCode 1 (offset too early)
read -1L        # high watermark
read -1L        # last stable offset
read -1L        # log start offset
read -1         # aborted transaction count
read 0          # record set size
read 5s "test2"
read 1          # partition count
read 0          # partition
read 1s         # errCode 1 (offset too early)
read -1L        # high watermark
read -1L        # last stable offset
read -1L        # log start offset
read -1         # aborted transaction count
read 0          # record set size

# list offsets request
write 65        # Size int32
write 2s        # ApiKey (ListOffsets)
write 2s        # ApiVersion 
write ${newMetadataRequestId} # CorrelationId 
write -1s       # ClientId string (null)
write -1        # replicaId
write [0x00]    # isolation level (0=READ_UNCOMMITTED)
write 2         # topic count 
write 5s "test2"            # topic name
write 1         # partition count
write 0         # partition
write -2L       # timestamp (earliest available offset)
write 5s "test1"            # topic name
write 1         # partition count
write 0         # partition
write -2L       # timestamp (earliest available offset)

read 78         # Size int32
read ${newMetadataRequestId} # CorrelationId int32
read 0          # throttle_time_ms int32
read 2          # topic count
read 5s "test2"             # topic name 
read 1          # partition count
read 0          # partition
read 0s         # error code
read -1L        # timestamp
read 20L        # offset
read 5s "test1"  # topic name 
read 1          # partition count
read 0          # partition
read 0s         # error code
read -1L        # timestamp
read 10L        # offset

# second fetch request
write 101
write 1s
write 5s
write ${newRequestId}
write -1s
write -1
write ${maximumWaitTime}
write 1
write ${maximumBytes}
write [0x00]
write 2
write 5s "test1"
write 1
write 0
write 10L
write -1L
write ${maximumBytesTest0}
write 5s "test2"
write 1
write 0
write 20L
write -1L
write ${maximumBytesTest0}

read 141
read ${newRequestId}
read [0..4]
read 1
read 5s "test2"
read 1
read 0
read 0s
read 999L       # high watermark
read -1L
read 20L        # log start offset
read -1
read 80
read 20L        # first offset
read 68
read 0
read [0x02]
read 0x4e8723aa
read 0x00s
read 0
read (long:timestamp)
read ${timestamp}
read -1L
read -1s
read -1
read 0x01
read ${kafka:varint(18)}
read [0x00]
read ${kafka:varint(0)}
read ${kafka:varint(0)}
read ${kafka:varint(-1)}
read ${kafka:varint(12)}
read "Hello, world"
read ${kafka:varint(0)}
