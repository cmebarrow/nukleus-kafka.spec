property nukleiRG010101EN ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010101EN ${nukleiRG010101EN.controlNew("kafka")}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlRG010101EN.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlRG010101EN.controller)}

connected

read 0x00000001
read (long:correlationIdRG010101N)
read [0x01]
read [0x06] "source"
read 0L
read [0x06] "target"
read (long:clientConnectRefRG010101N)
read 0L
read 4s "test"
read 38
read 7s "header1"
read 6 "match1"
read 7s "header2"
read 6 "match2"

write 0x40000001
write ${correlationIdRG010101N}
write ${nuklei:newReferenceId()}
write flush

close
closed
