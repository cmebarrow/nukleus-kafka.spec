scope kafka
{
    scope control
    {
        struct KafkaRouteEx
        {
            string16 topicName;
        }
    }

    scope stream
    {
        struct KafkaHeader
        {
            string16 key;
            int32 valueLen;
            octets[valueLen] value = null;
        }
    
        struct KafkaBeginEx
        {
            string16 topicName;
            varint64[] fetchOffsets;
            int32 fetchKeySize;
            octets[fetchKeySize] fetchKey = null;
            int8 fetchKeyHashCount;
            int32[fetchKeyHashCount] fetchKeyHash = null;
            list<kafka::stream::KafkaHeader> headers;
        }

        struct KafkaDataEx
        {
            varint64[] fetchOffsets;
            int32 messageKeySize;
            octets[messageKeySize] messageKey = null;
        }
    }
}
